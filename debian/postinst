#!/bin/sh

set -e

case "$1" in
    configure)
        # Odblokuj usługę jeśli była maskowana
        if [ -L /etc/systemd/system/nas-api.service ] && \
           [ "$(readlink -f /etc/systemd/system/nas-api.service)" = "/dev/null" ]; then
            systemctl unmask nas-api.service
        fi

        if [ -L /etc/systemd/system/nas-webdav.service ] && \
           [ "$(readlink -f /etc/systemd/system/nas-webdav.service)" = "/dev/null" ]; then
            systemctl unmask nas-webdav.service
        fi

        if [ -d /etc/nginx/sites-available ]; then
            # Usuń domyślną konfigurację jeśli istnieje
            if [ -f /etc/nginx/sites-enabled/default ]; then
                rm /etc/nginx/sites-enabled/default
            fi
            
            # Utwórz link do konfiguracji
            ln -sf /etc/nginx/sites-available/nas-engine /etc/nginx/sites-enabled/
            
            # Przeładuj NGINX
            if systemctl is-active --quiet nginx; then
                systemctl reload nginx
            fi
        fi

        # Create nas user if it doesn't exist
        if ! getent passwd nas >/dev/null; then
            adduser --system --group --no-create-home --home /opt/nas-panel nas
        fi
        
        # Set permissions
        chown -R nas:nas /opt/nas-panel
        chmod -R 755 /opt/nas-panel

	chown -R www-data:www-data /opt/nas-panel
	chmod -R 755 /opt/nas-panel/dist
	find /opt/nas-panel/dist -type f -exec chmod 644 {} \;

	# Rebuild Package System PAM
	cd /opt/nas-panel/
	npm rebuild
	echo "Installation Finished"

        # Enable and start services
        systemctl daemon-reload
        systemctl enable nas-webdav.service
        systemctl enable nas-api.service
        systemctl start nas-webdav.service
        systemctl start nas-api.service
    ;;
    
    abort-upgrade|abort-remove|abort-deconfigure)
    ;;
    
    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
